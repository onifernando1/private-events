<div class = "new_event_container">


<div class="new_event">
    <h1>Create a new event</h1> 
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this post from being saved:</h2>
      <ul>
      <% @event.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
    <div class = "event_form">
    <%=form_with model: @event, data:{turbo:false} do |form| %>
    <div class="event_form_item">   
    <div>
     <%=form.label :title, "Title:" %>
     </div>
     <div>
    <%=form.text_field :title %></div>
    </div>
    <div class="event_form_item">    
         <div>
        <%=form.label :description, "Description:" %>
        </div>
             <div>

         <%=form.text_field :description %>
         </div>
    </div>
    <div class="event_form_item">
         <div>
        <%=form.label :date, "Date:" %>
        </div>
             <div>

        <%=form.date_field :date %>
        </div>
        </div>
    <div class="event_form_item">   
         <div>

        <%=form.label :location, "Location:" %>
        </div>
             <div>

        <%=form.text_field :location %>
        </div>
    </div>
    <div class="event_form_item">  
    <div>
      <%=form.submit "Submit"%>
      </div>
</div>

    <%end%>
    </div>
    </div>
</div>